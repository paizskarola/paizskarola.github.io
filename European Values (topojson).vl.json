{
"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"description": "A map of European values by country.",
"width": 500,
"height": 550,
"data": {
"url": "https://raw.githubusercontent.com/EconomicsObservatory/courses/main/datasets/advanced/europe.topojson",
"format": {"type": "topojson", "feature": "europe"}
},
"params": [
{
"name": "Select Year",
"value": {"min": 2017, "max": 2023},
"bind": {"input": "range", "min": 2017, "max": 2023, "step": 1}
}
],
"layer": [
{
"mark": {
"type": "geoshape",
"stroke": "white",
"strokeWidth": 1
},
"encoding": {
"color": {"value": "#dedede"}
}
},
{
"transform": [
{
"lookup": "id",
"from": {
"data": {
"url": "https://raw.githubusercontent.com/paizskarola/paizskarola.github.io/main/ikt_europa_osszetett.csv",
"format": {"type": "csv"}
},
"key": "id",
"fields": ["value", "year"]
}
},
{
"filter": {
"field": "year",
"gte": {"param": "yearRange.min"},
"lte": {"param": "yearRange.max"}
}
}
],
"mark": {
"type": "geoshape",
"stroke": "white",
"strokeWidth": 0.5
},
"encoding": {
"color": {
"field": "value",
"type": "quantitative",
"scale": {"scheme": "blues"}
},
"tooltip": [
{"field": "id", "type": "nominal", "title": "Country"},
{"field": "value", "type": "quantitative", "title": "Value"},
{"field": "year", "type": "ordinal", "title": "Year"}
]
}
}
],
"projection": {"type": "mercator"},
"title": {
"text": "European Values",
"subtitle": "Source: Your Data Source",
"fontSize": 16,
"subtitleFontSize": 12,
"subtitleFontWeight": "lighter",
"anchor": "middle"
}
}

